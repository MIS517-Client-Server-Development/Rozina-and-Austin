<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="BusinessLogic.Layer.BusinessObjects" assembly="BusinessLogic.Layer">
	<class name="BusinessLogic.Layer.BusinessObjects.RegularLoad, BusinessLogic.Layer" table="[dbo].[RegularLoad]" lazy="true">
		<id name="Id" column="[RegularLoadID]">
		 	<generator class="native" />
		</id>
		<property name="ProgramID" column="[ProgramID]" />
		<property name="MajorID" column="[MajorID]" />
		<property name="Year" column="[Year]" />
		<property name="Semester" column="[Semester]" />
		<bag name="Courses" table="[dbo].[RegularLoadDetails]" lazy="true" cascade="all" inverse="false" >
			<key column="[RegularLoadID]"></key>
			<many-to-many column="[CourseID]" class="Course" />
    	</bag>
	</class>
</hibernate-mapping>

