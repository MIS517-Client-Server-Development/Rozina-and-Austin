<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="BusinessLogic.Layer.BusinessObjects" assembly="BusinessLogic.Layer">
	<class name="BusinessLogic.Layer.BusinessObjects.Course, BusinessLogic.Layer" table="[dbo].[Course]" lazy="true">
		<id name="Id" column="[ID]">
		 	<generator class="native" />
		</id>
		<property name="CourseCode" column="[CourseCode]" />
		<property name="CourseTitle" column="[CourseTitle]" />
		<property name="CourseDesc" column="[CourseDesc]" />
		<property name="Unit" column="[Unit]" />
		<property name="HoursWeek" column="[HoursWeek]" />
		<property name="Program" column="[Program]" />
		<property name="PreRequesite" column="[PreRequesite]" />
		<bag name="Grades" lazy="true" cascade="all" inverse="true" >
			<key column="[SubjectID]"></key>
			<one-to-many class="Grade"></one-to-many>
		</bag>
		<bag name="RegularLoads" table="[dbo].[RegularLoadDetails]" lazy="true" cascade="all" inverse="false" >
			<key column="[CourseID]"></key>
			<many-to-many column="[RegularLoadID]" class="RegularLoad" />
    	</bag>
	</class>
</hibernate-mapping>

