<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="BusinessLogic.Layer.BusinessObjects" assembly="BusinessLogic.Layer">
	<class name="BusinessLogic.Layer.BusinessObjects.Faculty, BusinessLogic.Layer" table="[dbo].[Faculty]" lazy="true">
		<id name="Id" column="[ID]">
		 	<generator class="native" />
		</id>
		<property name="Firstname" column="[Firstname]" />
		<property name="Lastname" column="[Lastname]" />
		<bag name="Accounts" lazy="true" cascade="all" inverse="true" >
			<key column="[FacultyID]"></key>
			<one-to-many class="Account"></one-to-many>
		</bag>
		<bag name="Grades" lazy="true" cascade="all" inverse="true" >
			<key column="[FacultyID]"></key>
			<one-to-many class="Grade"></one-to-many>
		</bag>
	</class>
</hibernate-mapping>

