<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Team Megatron</title>
    @Styles.Render("~/Content/css")
    @RenderSection("Styles", required: false)
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("University Management Application", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" id="navbar-footer">

                <div class="nav navbar-nav navbar-right" style="margin-right:10px !important;padding-top:8px;">
                    @if (Session["username"] == null)
                    {
                        @Html.ActionLink("Login", "Login", "Account", null, new { @class = "btn btn-default" })
                    }
                    &nbsp;
                    @if (Session["username"] == null) { 
                        @Html.ActionLink("Register", "Register", "Account", null, new { @class = "btn btn-default" })
                    }
                    else
                    {
                        @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "btn btn-default" })
                    }
                </div>

            </div><!--/.nav-collapse -->
            <!-- /.navbar-header -->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Save", "Department")"><i class="fa fa-plus-circle fa-fw"></i> Department Add</a>
                        </li>
                        <li>
                            <a href="@Url.Action("All", "Department")"><i class="fa fa-list-alt fa-fw"></i> Department View</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Save", "Course")"><i class="fa fa-plus-circle fa-fw"></i> Course Add</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Save", "Teacher")"><i class="fa fa-plus-circle fa-fw"></i> Teacher Add</a>
                        </li>
                        <li>
                            <a href="@Url.Action("AssignCourse", "Teacher")"><i class="fa fa-plug fa-fw"></i> Assign Course</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Statics", "Course")"><i class="fa fa-tasks fa-fw"></i> Course Statics</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Register", "Student")"><i class="fa fa-user-plus fa-fw"></i> Register Student</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Allocate", "Classroom")"><i class="fa fa-hand-o-right fa-fw"></i> Allocate Classrooms</a>
                        </li>
                        <li>
                            <a href="@Url.Action("AllocationView", "Classroom")"><i class="fa fa-tasks fa-fw"></i> Room Allocation Info</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Enroll", "Student")"><i class="fa fa-graduation-cap fa-fw"></i> Enroll Student</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Save", "Result")"><i class="fa fa-floppy-o fa-fw"></i> Save Student Result</a>
                        </li>
                        <li>
                            <a href="@Url.Action("ViewResult", "Result")"><i class="fa fa-certificate fa-fw"></i> View Result</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Courses", "Reset")"><i class="fa fa-unlock fa-fw"></i> Unassign Courses</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Classrooms", "Reset")"><i class="fa fa-unlock fa-fw"></i> Unallocate Classrooms</a>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>


        <div id="page-wrapper">
            @RenderBody()
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/pluginJs")
    @Scripts.Render("~/bundles/customJs")
    @RenderSection("scripts", required: false)
</body>
</html>
