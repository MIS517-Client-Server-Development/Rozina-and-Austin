@using UniversityManagementApp.Models

@{
    ViewBag.Title = "Course Assign to Teacher";
    ActionResponse response = ViewBag.response;
    List<Department> departments = ViewBag.Departments;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Course Assign to Teacher</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Course Assign Form
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        @if (response != null)
                        {
                            <div class="alert alert-@response.Class alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                @response.Message
                            </div>
                        }
                        <form class="form-horizontal" id="CourseAssign" method="POST">
                            <div class="form-group">
                                <label for="DepartmentId" class="col-sm-3 control-label">Department</label>
                                <div class="col-sm-9">
                                    <select name="DepartmentId" id="DepartmentId" class="form-control">
                                        <option value="">Select Department</option>
                                        @foreach (var dept in departments)
                                        {
                                            <option value="@dept.DepartmentId">@dept.DepartmentName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="TeacherId" class="col-sm-3 control-label">Teacher</label>
                                <div class="col-sm-9">
                                    <select name="TeacherId" id="TeacherId" class="form-control">
                                        <option value="">Select Teacher</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="CreditTaken" class="col-sm-3 control-label">Credit to be taken</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="CreditTaken" placeholder="" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="RemainingCredit" class="col-sm-3 control-label">Remaining Credit</label>
                                <div class="col-sm-9">
                                    <input type="email" class="form-control" id="RemainingCredit" placeholder="" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="CourseId" class="col-sm-3 control-label">Course Code</label>
                                <div class="col-sm-9">
                                    <select name="CourseId" id="CourseId" class="form-control">
                                        <option value="">Select Code</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="CourseName" class="col-sm-3 control-label">Name</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="CourseName" placeholder="" disabled>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="CourseCredit" class="col-sm-3 control-label">Credit</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="CourseCredit" placeholder="" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-plus-square"></i> Assign</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<!-- Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header modal-header-danger">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="confirmModalLabel">Please Wait!</h4>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" id="confirm" class="btn btn-primary" data-dismiss="modal">Confirm</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/Scripts/page/courseAssign.js")
}