@using UniversityManagementApp.Models

@{
    ViewBag.Title = "Unallocate Rooms";
    ActionResponse response = ViewBag.response;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Unallocate Rooms</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Unallocate Form
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        @if (response != null)
                        {
                            <div class="alert alert-@response.Class alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                @response.Message
                            </div>
                        }
                        <form class="form-horizontal" id="UnallocateRooms" method="POST">
                            <div class="form-group">
                                <div class="col-sm-offset-5 col-sm-7">
                                    <button type="submit" name="Unallocate" id="Unallocate" class="btn btn-danger">Unallocate Rooms</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
@section Scripts {
    <script src="@Url.Content("~/Scripts/jquery.confirm.min.js")"></script>
    @Scripts.Render("~/Scripts/page/resetClassrooms.js")
}

