@using UniversityManagementApp.Models

@{
    ViewBag.Title = "Enroll In a Course";
    ActionResponse response = ViewBag.response;
    List<StudentSelectView> students = ViewBag.Students;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Enroll In a Course</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Enroll Student
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        @if (response != null)
                        {
                            <div class="alert alert-@response.Class alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                @response.Message
                            </div>
                        }
                        <form class="form-horizontal" id="StudentEnroll" method="POST">
                            <div class="form-group">
                                <label for="StudentId" class="col-sm-3 control-label">Student Reg. No.</label>
                                <div class="col-sm-9">
                                    <select name="StudentId" id="StudentId" class="form-control">
                                        <option value="">Select Student</option>
                                        @foreach (var std in students)
                                        {
                                            <option value="@std.StudentId">@std.RegNo</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="StudentName" class="col-sm-3 control-label">Name</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="StudentName" placeholder="" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="StudentEmail" class="col-sm-3 control-label">Email</label>
                                <div class="col-sm-9">
                                    <input type="email" class="form-control" id="StudentEmail" placeholder="" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="DepartmentName" class="col-sm-3 control-label">Department</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="DepartmentName" placeholder="" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="CourseId" class="col-sm-3 control-label">Available Courses</label>
                                <div class="col-sm-9">
                                    <select name="CourseId" id="CourseId" class="form-control">
                                        <option value="">Select Course</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="EnrollmentDate" class="col-sm-3 control-label">Date</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="EnrollmentDate" id="EnrollmentDate" placeholder="">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-plus-square"></i> Enroll</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
@section Styles {
    @Styles.Render("~/Content/datepicker")
}
@section Scripts {
    @Scripts.Render("~/bundles/datepicker")
    @Scripts.Render("~/Scripts/page/studentEnroll.js")
}